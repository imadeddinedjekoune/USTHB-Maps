<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/untitled"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".FirstPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"

            tools:ignore="MissingConstraints">

            <ImageView

                android:id="@+id/logo"
                android:layout_width="255dp"
                android:layout_height="150dp"

                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_school"
                tools:ignore="MissingConstraints" />
            " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="USTHB App"
                android:textColor="@color/textColor"
                android:textSize="32sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/month_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"

        android:padding="10dp"

        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:rowCount="2">


        <androidx.cardview.widget.CardView
            android:id="@+id/gridQR"

            android:layout_width="170dp"
            android:layout_height="243dp"
            android:layout_margin="10dp"

            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0"
            >


            <ImageView
                android:id="@+id/img"
                android:layout_width="127dp"
                android:layout_height="97dp"

                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:paddingTop="20dp"
                android:src="@drawable/ic_baseline_qr_code_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="80dp"
                android:text="QR Code"
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gridLocalisation"

            android:layout_width="170dp"
            android:layout_height="243dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="0"
            app:layout_rowWeight="0">


            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:paddingTop="20dp"
                android:src="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="80dp"
                android:text="My Location"
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gridressource"

            android:layout_width="170dp"
            android:layout_height="243dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_column="0"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0">


            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:paddingTop="20dp"
                android:src="@drawable/ic_baseline_library_books_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="80dp"
                android:text="Resources"
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gridEDT"
            android:layout_width="170dp"
            android:layout_height="243dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_column="1"
            app:layout_columnWeight="0"
            app:layout_row="1"
            app:layout_rowWeight="0">


            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:paddingTop="20dp"
                android:src="@drawable/ic_baseline_tabletime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="80dp"
                android:text="Time Table"
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>